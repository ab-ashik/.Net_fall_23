@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<ZeroHunger.DTOs.EmployeeDTO>

@{
    ViewBag.Title = "Employee";
}

<p>@Session["id"]</p>

<div>
    <h1 class="text-center">EMPLOYEES</h1><br />
    <table class="table table-striped table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>PHone</th>
            <th>Email</th>
            <th class="text-center" colspan="2"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.phone</td>
                <td>@item.email</td>
                <td class="text-center"><a href="/home/UpdateEmployee/@item.id" class="btn btn-primary">Update Details</a></td>
                <td class="text-center"><a href="/home/DeleteEmployee/@item.id" class="btn btn-danger">Delete</a></td>
            </tr>
        }

    </table>
</div>
