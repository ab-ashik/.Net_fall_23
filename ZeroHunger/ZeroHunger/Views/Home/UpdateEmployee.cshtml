@model ZeroHunger.DTOs.EmployeeDTO

@{
    ViewBag.Title = "UpdateEmployee";
}

<div class="row d-flex justify-content-center">
    <form method="post" id="login" class="col-md-6">
        <h2 class="">Update Employee Details</h2>
        <div class="form-group">
            <label for="name">Username</label>
            <input type="text" class="form-control" id="name" name="name"
                   placeholder="Enter employee name here" value="@Model.name">
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" name="phone"
                   placeholder="Enter Phone Number here" value="@Model.phone">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email"
                   placeholder="Enter email address here" value="@Model.email">
        </div>

            <div class="">
                <button type="submit" class="btn btn-primary">Add Employee</button>
            </div>
    </form>
</div>