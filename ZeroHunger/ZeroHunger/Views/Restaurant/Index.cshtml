@{
    Layout = "~/Views/Shared/_LayoutRestaurant.cshtml";
}


@{
    ViewBag.Title = "Index";
}



<div>
    <div class="text-center">
        <h1>Your Details</h1><br />
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>id</th>
            <th>name</th>
            <th>phone</th>
            <th>email</th>
            <th class="text-center" colspan="2"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.username </td>
                <td>@item.phone</td>
                <td>@item.location</td>
                <td class="text-center"><a href="/Restaurant/MakeRequest" class="btn btn-primary">Make Request</a></td>
            </tr>
        }


    </table>

    <h2></h2>
</div>

