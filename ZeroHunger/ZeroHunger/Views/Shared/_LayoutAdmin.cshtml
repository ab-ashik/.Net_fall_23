<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary">
        <div class="container-fluid">
            <b class="navbar-brand text-white" href="#">Zero Hunger</b>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav ">
                    <li class="nav-item ">
                        <a class="nav-link  text-white"  href="/home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white"  href="/Home/Employee">Employees</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link  text-white" href="/Home/AddEmployees">Add Employee</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white" href="/Home/Restaurant">Restaurants</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white" href="/Home/AddRestaurants">Add Restaurants</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white" href="/Home/showComingRequests">Incoming Requests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white" href="/Home/showRequests">Requests Details</a>
                    </li>
                </ul>
            </div>
            <div class="navbar justify-content-end">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Logout">Logout</a>
                    </li>
                </ul>
            </div>
            <div class="navbar justify-content-end">
                <ul class="nav nav-pills">
                    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


